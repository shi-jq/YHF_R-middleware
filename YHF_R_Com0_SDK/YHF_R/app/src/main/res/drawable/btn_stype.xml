<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中 -->
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="90" android:endColor="#44a3df" android:startColor="#2988d3" android:type="linear" />
            <stroke android:width="1dp" android:color="#1f699a" />
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>
    </item>

    <!-- 按下 -->
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:endColor="#1f79bf" android:startColor="#2c86c5" android:type="linear" />
            <stroke android:width="1dp" android:color="#1f699a" />
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>
    </item>

    <!--不可用-->
    <item android:state_enabled="false">
        <shape>
            <gradient android:angle="90" android:endColor="#a9a9a9" android:startColor="#bfbfbf" android:type="linear" />
            <stroke android:width="1dp" android:color="#969696" />
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>
    </item>
    <!--正常-->
    <item>
        <shape>
            <gradient android:angle="90" android:endColor="#2988d3" android:startColor="#44a3df" android:type="linear" />
            <stroke android:width="1dp" android:color="#1f699a" />
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>
    </item>
</selector>
